<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.practicacontactos.HelloController" style="-fx-background-color: #8282d7">

    <ImageView fx:id="imagenContacto"/>

    <HBox alignment="CENTER">
        <Label fx:id="nombreLabel" text="NOMBRE: "/>
        <TextField fx:id="nombre" maxWidth="150"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="apellidoLabel" text="APELLIDO: "/>
        <TextField fx:id="apellido" maxWidth="150"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="correoLabel" text="CORREO: "/>
        <TextField fx:id="correo" maxWidth="150"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="direccionLabel" text="DIRECCION: "/>
        <TextField fx:id="direccion" maxWidth="150"/>
    </HBox>



    <Button fx:id="aceptar" text="Insertar" style="-fx-background-color: #d93737"/>
</VBox>
